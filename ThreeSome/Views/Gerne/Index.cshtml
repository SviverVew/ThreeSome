@model IEnumerable<ThreeSome.Models.genre>
@{
    Layout = null;
}
<style>
    .navbar {
        overflow: hidden;
        background-color: none;
        display: inline-block;
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Segoe UI';
    }


    .dropdown {
        overflow: hidden;
    }

        .dropdown .dropbtn {
            font-size: 16px;
            border: none;
            outline: none;
            color: white;
            background-color: inherit;
            font-family: inherit;
            margin: 0;
        }

    .dropdown-content {
        display: none;
        position: absolute;
        background-color: none;
        min-width: 160px;
        z-index: 1;
    }

        .dropdown-content a {
            float: none;
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
            text-align: left;
            transition: 0.7s;
            font-size: 15px;
        }

            .dropdown-content a:hover {
                font-size: 20px;
            }

    .dropdown:hover .dropdown-content {
        display: block;
        transition: 0.7s;
    }

    .theloai:hover {
        font-size: 30px;
    }
</style>
<div class="navbar">
    <div class="dropdown">
        <a class="a1" id="theloai" href="Gerne">Thể loại <span style="font-size:10px">&#9660;</span></a>
        <div class="dropdown-content">
            @foreach (var item in Model)
            {
                if (item.genreID != 1)
                {
                    <a class="a1" href="#">@item.genreName</a>
                }
            }
        </div>
    </div>
</div>